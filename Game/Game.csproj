    <ProjectReference Include="..\Library\Library.csproj" />
    <ProjectReference Include="..\WinLibrary\WinLibrary.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="UI\SceneTitle\UISelectCharacterDialog.cs" />
